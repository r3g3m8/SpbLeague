@model SpbLeague.Domain.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Регистрация";
}

<div class="center">
    <h1>Регистрация</h1>
    <form method="post" asp-controller="Account" asp-action="Register">
        @Html.ValidationSummary()
        <div class="txt_field">
            <input asp-for="Email" placeholder="Email" type="email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="txt_field">
            <input asp-for="Name" placeholder="Имя" type="text">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="txt_field">
            <input asp-for="Surname" placeholder="Фамилия" type="text">
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
        <div class="txt_field">
            <input asp-for="Password" placeholder="Пароль" type="password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="txt_field">
            <input asp-for="PasswordConfirm" placeholder="Подтвердите пароль" type="password">
            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
        </div>
        <button>Зарегестрироваться</button>
        <div class="signup_link">
            Уже есть аккаунт? <a asp-controller="Account" asp-action="Login">Вход</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}